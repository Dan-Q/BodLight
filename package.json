{
  "name": "BodLight",
  "version": "0.1.3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "rm -rf build/*; electron-packager --platform=darwin,linux,win32 . BodLight --overwrite --out=build",
    "package": "node -e \"var fs = require('fs'); var json = JSON.parse(fs.readFileSync('package.json')); console.log(json.version)\" > build/version; cd build; rm *.zip; for D in *; do if [ -d \"${D}\" ]; then echo \"${D}\";zip -q1r \"${D}.zip\" \"${D}\"; fi; done; cd ..",
    "deploy": "scp build/*.zip bodl2255@www-prd.bodleian.ox.ac.uk:bodlight/; scp build/version bodl2255@www-prd.bodleian.ox.ac.uk:bodlight/"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "~1.6.11",
    "electron-debug": "^1.3.0",
    "electron-packager": "^8.7.2"
  },
  "dependencies": {
    "electron-settings": "^3.1.1",
    "uuid": "3.1.0",
    "mime": "^1.3.6",
    "photonkit": "^0.1.2",
    "vue": "^2.3.4"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dan-Q/BodLight"
  },
  "license": "GPL-3.0"
}
